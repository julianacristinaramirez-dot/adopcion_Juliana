// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String?  // Metodo tradicional
  googleId  String?  @unique // Metodo de login con Google
  avatar    String?  // Foto de perfil de Google
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Pets {
  id          Int      @id @default(autoincrement())
  name        String
  image       String   
  species     Species  
  breed       String
  age         Int      
  size        Size     
  gender      Gender  
  description String

  // Relación con el refugio 
  shelter     Shelter  @relation(fields: [shelterId], references: [id])
  shelterId   Int      
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Shelter {
  id       Int    @id @default(autoincrement())
  name     String
  location String 
  pets     Pets[]
}

enum Species {
  PERRO
  GATO
  OTRO
}

enum Size {
  PEQUEÑO
  MEDIANO
  GRANDE
}

enum Gender {
  MACHO
  HEMBRA
}